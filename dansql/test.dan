~~~~~~~~~~
~ CREATE ~
~~~~~~~~~~
create database xyz;

create table users {
  id: int
  name: string
  password: string
  email: string
};

write to users {
  id = 1
  name = "Bob"
  email = "abc@xyz.com"
  password = "123"
};

~~~~~~~~
~ READ ~
~~~~~~~~
fetchall from users [*];

fetchall from users [*] {
  id > 0
};

fetchone from users [*] {
  name = "Bob"
  email = "veryrealemail@gmail.com"
};



~~~~~~~~~~
~ UPDATE ~
~~~~~~~~~~
fetchone from users [*] {
  name = "Bob"
  email = "veryrealemail@gmail.com"
} update {
  name += " Cat"
};


update table users {
  newcol age: int    ~ add an age column
  name: int          ~ change type of name to int
  delete email       ~ delete email column
};


